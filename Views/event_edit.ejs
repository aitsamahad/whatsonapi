    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Edit event</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Edit event</li>
              </ol>
            </div>
          </div>
        </div><!-- /.container-fluid -->
      </section>

      <!-- Main content -->
      <form action="/dashboard/events/<%= eventid %>/edit" class="content" method="POST">
        <section class="content">
          <div class="row">
            <div class="col-md-6">
              <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Event Details</h3>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label for="eventTitle">Event Title</label>
                    <input type="text" id="eventTitle" name="eventTitle" class="form-control" value="<%= event.title %>"
                      required>
                  </div>
                  <div class="form-group">
                    <label for="eventSummary">Event Summary</label>
                    <textarea id="eventSummary" name="eventSummary" class="form-control" rows="4"
                      required><%= event.summary %></textarea>
                  </div>
                  <div class="form-group">
                    <label for="eventDescription">Event Description</label>
                    <textarea id="eventDescription" name="eventDescription" class="form-control" rows="4"
                      required><%= event.description %></textarea>
                  </div>
                  <div class="form-group">
                    <label for="eventInfo">General Information</label>
                    <textarea id="eventInfo" name="eventInfo" class="form-control" rows="4"
                      required><%= event.generalInfo %></textarea>
                  </div>
                  <div class="form-group">
                    <label for="eventAddress">Address</label>
                    <input type="text" id="eventAddress" name="eventAddress" class="form-control"
                      value="<%= event.address %>" required>
                  </div>
                  <div class="form-group">
                    <label for="eventMap">Map URL</label>
                    <input type="text" id="eventMap" name="eventMap" class="form-control"
                      placeholder="https://www.google.com/maps/place/somewhere,+someplace,+somestate/@33.5025632,73.0978544,8z/data=!4m5!3m4!1s0x38dff2b731c4a8e1:0x764e7afba31abf3a!8m2!3d33.4920017!4d73.0966019"
                      required>
                    <button type="button" id="extractURL" class="btn btn-block btn-success">
                      <i class="fas fa-barcode"></i> Extract Longs & Lats
                    </button>
                  </div>
                  <div class="form-group">
                    <label for="eventLat">Latitude</label>
                    <input type="text" id="eventLat" name="eventLat" value="<%= event.lat %>" class="form-control"
                      required />
                  </div>
                  <div class="form-group">
                    <label for="eventLong">Longitude</label>
                    <input type="text" id="eventLong" name="eventLong" value="<%= event.long %>" class="form-control"
                      required />
                  </div>
                  <div class="form-group">
                    <label>Selected Type: </label>
                    <input type="text" value="<%= event.interest.title %>" class="form-control" disabled />
                  </div>
                  <div class="form-group">
                    <label for="eventType">Type</label>
                    <select class="form-control custom-select" id="interest" name="interest" required>
                      <option selected value="<%= event.interest._id %>">Default</option>
                      <% interests.forEach(function(interest){%>
                      <option value="<%= interest._id %>"><%= interest.title %></option>
                      <% }); %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="eventHappyHour">Happy Hour</label>
                    <input type="text" id="eventHappyHour" name="eventHappyHour" value="<%= event.happyHour %>"
                      class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label for="eventFood">Food</label>
                    <input type="text" id="eventFood" name="eventFood" value="<%= event.food %>" class="form-control"
                      required>
                  </div>
                  <div class="form-group">
                    <label for="eventMusic">Music</label>
                    <input type="text" id="eventMusic" name="eventMusic" value="<%= event.music %>" class="form-control"
                      required>
                  </div>
                  <div class="form-group">
                    <label for="eventOffer">Offer</label>
                    <input type="text" id="eventOffer" name="eventOffer" value="<%= event.offer %>" class="form-control"
                      required>
                  </div>
                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
            <div class="col-md-6">
              <div class="card card-secondary">
                <div class="card-header">
                  <h3 class="card-title">Ticket Details</h3>
                </div>
                <div class="card-body">
                  <div class="form-group">
                    <label for="ticketDetailsInformation">Ticket Details</label>
                    <textarea rows="4" id="ticketDetailsInformation" name="ticketDetailsInformation"
                      class="form-control" required><%= event.ticketDetails %></textarea>
                  </div>

                </div>
                <!-- /.card-body -->
              </div>
              <!-- /.card -->
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <a href="#" class="btn btn-secondary">Cancel</a>
              <input type="submit" value="Next" class="btn btn-success float-right">
            </div>
          </div>
        </section>
      </form>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

